---
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("blog", ({ data, slug }) => data.locale === "es" && !data.draft && slug.startsWith("es/"));
posts.sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate));
---
<Layout title="Blog - Victor RPT" description="Artículos sobre software, DevOps y más">
  <h1 class="text-3xl font-bold mb-6">Blog</h1>
  <ul class="space-y-4">
    {posts.map((p) => (
      <li>
        <a class="text-blue-600 hover:underline" href={`/es/blog/${p.slug.replace(/^es\//,'')}`}>{p.data.title}</a>
        {p.data.description && <p class="text-sm text-gray-600">{p.data.description}</p>}
      </li>
    ))}
  </ul>
</Layout>
