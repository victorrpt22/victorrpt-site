---
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data, slug }) => data.locale === "es" && !data.draft && slug.startsWith("es/"));
  return posts.map((post) => ({
    params: { slug: post.slug.replace(/^es\//, "") },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---
<Layout title={post.data.title} description={post.data.description || ""}>
  <div class="max-w-5xl mx-auto">
    {post.data.heroImage && (
      <figure class="mb-6 overflow-hidden rounded-lg border border-gray-200 dark:border-gray-800">
        <img src={post.data.heroImage} alt={post.data.heroAlt || ''} class="w-full h-56 sm:h-72 object-cover" />
      </figure>
    )}
    <div class="grid lg:grid-cols-[280px_1fr] gap-8">
      <aside class="lg:sticky lg:top-20 self-start">
        <h1 class="text-2xl font-bold">{post.data.title}</h1>
        <p class="text-sm text-gray-600 dark:text-gray-400">{new Date(post.data.pubDate).toLocaleDateString('es-MX', { year:'numeric', month:'short', day:'numeric' })}</p>
        {post.data.intro && <p class="mt-4 text-gray-700 dark:text-gray-300">{post.data.intro}</p>}
        {post.data.sourceUrl && (
          <a href={post.data.sourceUrl} target="_blank" rel="noopener noreferrer" class="mt-4 inline-flex items-center gap-2 rounded-md border border-gray-300 dark:border-gray-700 px-3 py-1.5 bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
            <svg viewBox="0 0 16 16" width="16" height="16" aria-hidden="true" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8Z"></path></svg>
            <span>Ver c√≥digo en GitHub</span>
          </a>
        )}
      </aside>
      <article class="post-content">
        <Content />
      </article>
    </div>
  </div>
</Layout>
