---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Card from "../../components/Card.astro";
const posts = await getCollection("blog", ({ data, slug }) => data.locale === "es" && !data.draft && slug.startsWith("es/"));
posts.sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate));
const latest = posts.slice(0, 3);
---
<Layout title="Victor RPT - Desarrollador & DevOps">
  <section class="text-center">
    <h1 class="text-3xl sm:text-4xl font-bold mb-4">¡Hola! Soy Victor Perez</h1>
    <p class="text-lg mb-6">Ingeniero de Software y Cloud (B.E. en ICT Engineering)</p>
    <p>Este es mi sitio personal donde comparto mi <strong>currículum</strong>, <strong>blog</strong> y <strong>proyectos</strong>.</p>
    <div class="mt-6">
      <a class="inline-block px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" href="/es/blog">📖 Ver Blog</a>
      <a class="inline-block px-4 py-2 rounded bg-gray-900 text-white hover:bg-black ml-3" href="/es/projects">💻 Ver Proyectos</a>
      <a class="inline-block px-4 py-2 rounded border ml-3 hover:bg-gray-100" href="/es/cv">📄 Ver CV</a>
      <a class="inline-block px-4 py-2 rounded border ml-3 hover:bg-gray-100" href="/es/contact">✉️ Contacto</a>
    </div>
  </section>

  {latest.length > 0 && (
    <section class="mt-12">
      <h2 class="text-2xl font-semibold mb-4">Últimos Artículos</h2>
      <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        {latest.map((p) => (
          <Card
            title={p.data.title}
            description={p.data.description}
            link={`/es/blog/${p.slug.replace(/^es\//, '')}`}
          />
        ))}
      </div>
    </section>
  )}
</Layout>
