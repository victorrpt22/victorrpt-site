---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Card from "../components/Card.astro";
const posts = await getCollection("blog", ({ data, slug }) => data.locale === "en" && !data.draft && slug.startsWith("en/"));
posts.sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate));
const latest = posts.slice(0, 3);
---
<Layout title="Victor RPT - Software & DevOps">
  <section class="text-center">
    <h1 class="text-4xl font-bold mb-4">Hi! I'm Victor Perez</h1>
    <p class="text-lg mb-6">Software & Cloud Engineer (B.E. in ICT Engineering)</p>
    <p>This is my personal site with my <strong>resume</strong>, <strong>blog</strong>, and <strong>projects</strong>.</p>
    <div class="mt-6">
      <a class="inline-block px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" href="/blog">📖 Read Blog</a>
      <a class="inline-block px-4 py-2 rounded bg-gray-900 text-white hover:bg-black ml-3" href="/projects">💻 View Projects</a>
      <a class="inline-block px-4 py-2 rounded border ml-3 hover:bg-gray-100" href="/cv">📄 View Resume</a>
      <a class="inline-block px-4 py-2 rounded border ml-3 hover:bg-gray-100" href="/contact">✉️ Contact</a>
    </div>
  </section>

  {latest.length > 0 && (
    <section class="mt-12">
      <h2 class="text-2xl font-semibold mb-4">Latest Posts</h2>
      <div class="grid gap-4 sm:grid-cols-3">
        {latest.map((p) => (
          <Card
            title={p.data.title}
            description={p.data.description}
            link={`/blog/${p.slug.replace(/^en\//, '')}`}
          />
        ))}
      </div>
    </section>
  )}
</Layout>
