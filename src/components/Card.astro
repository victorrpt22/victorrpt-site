---
const { title, description, link } = Astro.props as {
  title: string;
  description?: string;
  link: string;
};
const external = /^https?:\/\//.test(link);
---

<article class="border border-gray-200 dark:border-gray-700 rounded-lg p-5 bg-white dark:bg-gray-800 shadow-sm hover:shadow-md transition">
  <header class="mb-2">
    <h3 class="text-xl font-semibold">
      <a
        class="hover:text-blue-600"
        href={link}
        target={external ? "_blank" : undefined}
        rel={external ? "noopener noreferrer" : undefined}
      >
        {title}
      </a>
    </h3>
  </header>
  {description && <p class="text-gray-600 dark:text-gray-300">{description}</p>}
</article>
