---
const { title, description, link } = Astro.props as {
  title: string;
  description: string;
  link: string;
};
---

<article class="border rounded-lg p-5 bg-white shadow-sm hover:shadow transition">
  <header class="mb-2">
    <h3 class="text-xl font-semibold">
      <a class="hover:text-blue-600" href={link} rel="noopener noreferrer" target="_blank">{title}</a>
    </h3>
  </header>
  <p class="text-gray-600">{description}</p>
</article>

